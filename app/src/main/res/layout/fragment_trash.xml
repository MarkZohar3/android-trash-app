<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TrashFragment">




    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="match_parent">


        <LinearLayout android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="2dp"
            android:layout_weight="1">
            <TextView
                android:layout_marginTop="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_gravity="center"
                tools:text="Before"
                android:id="@+id/text_view_before"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/image_view1"
                android:background="@drawable/ic_trash"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:clickable="false"
                android:layout_height="250dp"/>

            <TextView
                android:id="@+id/text1_trashDescriptionMain"
                android:paddingTop="3dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"
                android:gravity="top|center"
                tools:text="Description"
                android:id="@+id/text1_trashDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text_dateMain"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="Date added"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                tools:text="Date"
                android:id="@+id/text1_date"
                android:layout_width="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/text1_usernameMain"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="Contributor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_gravity="center"
                android:textAlignment="center"
                tools:text="Username"
                android:id="@+id/text1_username"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_marginTop="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_gravity="center"
                tools:text="After"
                android:id="@+id/text_view_after"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/image_view2"
                android:background="@drawable/ic_trash"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:clickable="false"
                android:layout_height="250dp"/>
            <TextView
                android:id="@+id/text2_trashDescriptionMain"
                android:paddingTop="3dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"
                android:gravity="top|center"
                tools:text="Description"
                android:id="@+id/text2_trashDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text2_dateMain"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="Date added"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                tools:text="Date"
                android:id="@+id/text2_date"
                android:layout_width="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"/>



            <TextView
                android:id="@+id/text2_usernameMain"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="Contributor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_gravity="center"
                tools:text="Username"
                android:id="@+id/text2_username"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>




</FrameLayout>